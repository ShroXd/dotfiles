set nocompatible
filetype on
filetype indent on
syntax on

set number
set relativenumber
set ruler
set encoding=utf-8
set wrap
set textwidth=0
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set backspace=indent,eol,start
set hidden
set laststatus=2
set showmode
set showcmd
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
set clipboard=unnamedplus
map Y y$
nnoremap <C-L> :nohl<CR><C-L>
set mouse=a
set scrolloff=1
